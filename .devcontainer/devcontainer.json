{
  "name": "EPORTFOLIO - PHP + MariaDB",
  "dockerComposeFile": "docker-compose.yml",
  "service": "web",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "forwardPorts": [8080, 3306],
  "portsAttributes": {
    "8080": { "label": "Web (Apache)", "onAutoForward": "openBrowser" },
    "3306": { "label": "MariaDB" }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /var/www/html || true",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
